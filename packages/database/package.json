{
  "name": "@hss/database",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    
    "db:generate": "dotenv -e ../../.env -- drizzle-kit generate",
    "db:migrate": "dotenv -e ../../.env -- tsx src/migrate.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}