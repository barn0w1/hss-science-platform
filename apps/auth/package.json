{
  "name": "@hss/auth",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.tsx",
    "build": "esbuild src/index.tsx --bundle --platform=node --target=node24 --format=esm --outfile=dist/index.js",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@hss/auth-middleware": "workspace:*",
    "@hss/config": "workspace:*",
    "@hss/database": "workspace:*",
    "@hss/session-sdk": "workspace:*",
    "dotenv": "^17.2.3",
    "hono": "^4.11.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "esbuild": "^0.25.12",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}